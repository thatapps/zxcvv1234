<?xml version="1.0" encoding="utf-8"?>
<com.lazyswipe.widget.FixedTip xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/fix_tip_height"
    android:background="@drawable/fix_tip_bg"
    android:paddingBottom="12.0dip"
    android:paddingLeft="30.0dip"
    android:paddingRight="34.0dip"
    android:paddingTop="22.0dip" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@id/tip_icon"
            android:layout_width="38.0dip"
            android:layout_height="38.0dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="33.0dip"
            android:layout_marginStart="33.0dip"
            android:layout_toEndOf="@id/tip_icon"
            android:layout_toRightOf="@id/tip_icon" >

            <RelativeLayout
                android:id="@id/tip_label_container"
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:layout_alignParentTop="true" >

                <TextView
                    android:id="@id/tip_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="start|top|center"
                    android:textColor="#ff414141"
                    android:textSize="15.0sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="36.0dip"
                android:layout_below="@id/tip_label_container" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@id/btn_negative"
                        android:layout_width="wrap_content"
                        android:layout_height="35.0dip"
                        android:layout_marginEnd="12.5dip"
                        android:layout_marginRight="12.5dip"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:textColor="#ff414141"
                        android:textSize="14.0sp" />

                    <TextView
                        android:id="@id/btn_positive"
                        android:layout_width="wrap_content"
                        android:layout_height="35.0dip"
                        android:layout_marginLeft="12.5dip"
                        android:layout_marginStart="12.5dip"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:textColor="#ffffffff"
                        android:textSize="14.0sp" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</com.lazyswipe.widget.FixedTip>