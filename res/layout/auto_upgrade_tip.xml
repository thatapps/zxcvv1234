<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="50.0dip" >

    <TextView
        android:id="@id/upgrade_tip_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingBottom="8.0dip"
        android:textColor="@color/tutorial_title_text_color"
        android:textSize="17.0sp" />

    <TextView
        android:id="@id/upgrade_tip_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingBottom="14.0dip"
        android:textColor="@color/tutorial_message_text_color"
        android:textSize="17.0sp" />

    <LinearLayout
        android:id="@id/upgrade_tip_actions_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20.0dip" >

        <TextView
            android:id="@id/upgrade_tip_action_negative"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/tutorial_action_height"
            android:layout_weight="1.0"
            android:background="@drawable/bg_rect_button"
            android:gravity="center"
            android:paddingLeft="6.0dip"
            android:paddingRight="6.0dip"
            android:singleLine="true"
            android:text="@string/download_confirm_seeyoutommorrow"
            android:textColor="@color/tutorial_action_text_color_normal"
            android:textSize="@dimen/tutorial_action_text_size" />

        <View
            android:id="@id/upgrade_tip_action_divider"
            android:layout_width="30.0dip"
            android:layout_height="1.0dip" />

        <TextView
            android:id="@id/upgrade_tip_action_positive"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/tutorial_action_height"
            android:layout_weight="1.0"
            android:background="@drawable/bg_rect_button_intend"
            android:gravity="center"
            android:paddingLeft="6.0dip"
            android:paddingRight="6.0dip"
            android:singleLine="true"
            android:text="@string/upgrade_go"
            android:textColor="@color/tutorial_action_text_color_intend"
            android:textSize="@dimen/tutorial_action_text_size" />
    </LinearLayout>

</LinearLayout>