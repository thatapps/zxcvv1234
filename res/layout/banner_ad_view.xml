<?xml version="1.0" encoding="utf-8"?>
<com.lazyswipe.features.promotion.BannerAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom" >

    <ImageView
        android:id="@id/icon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:src="@drawable/ic_ad" />

    <LinearLayout
        android:id="@id/title_action_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#b3000000"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="8.0dip"
        android:paddingLeft="12.0dip"
        android:paddingRight="12.0dip"
        android:paddingTop="8.0dip" >

        <TextView
            android:id="@id/title"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:textColor="#ffffffff"
            android:textSize="12.0sp" />

        <View
            android:layout_width="12.0dip"
            android:layout_height="1.0dip" />

        <TextView
            android:id="@id/action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ff1da0f8"
            android:paddingBottom="4.0dip"
            android:paddingLeft="12.0dip"
            android:paddingRight="12.0dip"
            android:paddingTop="4.0dip"
            android:textColor="#ffffffff"
            android:textSize="12.0sp" />
    </LinearLayout>

</com.lazyswipe.features.promotion.BannerAdView>