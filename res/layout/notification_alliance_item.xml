<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/preference_background"
    android:orientation="vertical"
    android:paddingBottom="32.0dip"
    android:paddingEnd="27.0dip"
    android:paddingLeft="68.0dip"
    android:paddingRight="27.0dip"
    android:paddingStart="68.0dip"
    android:paddingTop="32.0dip" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@id/icon"
            android:layout_width="38.669983dip"
            android:layout_height="38.669983dip" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="13.0dip"
            android:paddingRight="13.0dip" >

            <TextView
                android:id="@id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:textSize="14.0dip" />

            <TextView
                android:id="@id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#80ffffff"
                android:textSize="10.0dip" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@id/body"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.3"
        android:paddingBottom="30.0dip"
        android:paddingTop="13.0dip"
        android:textColor="#ffffffff"
        android:textSize="11.669983sp" />

    <TextView
        android:id="@id/download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/spotlight_button_background"
        android:paddingBottom="6.0dip"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:paddingTop="6.0dip"
        android:text="@string/download" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:paddingTop="24.0dip" >

        <ImageView
            android:id="@id/update_icon"
            android:layout_width="46.0dip"
            android:layout_height="46.0dip"
            android:background="@drawable/ic_refresh_btn_bg"
            android:scaleType="centerInside"
            android:src="@drawable/ic_refresh_btn" />
    </LinearLayout>

</LinearLayout>