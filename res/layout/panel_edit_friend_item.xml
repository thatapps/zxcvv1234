<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/chooser_btn_bg"
    android:orientation="vertical"
    android:paddingLeft="20.0dip" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="63.339996dip" >

        <ImageView
            android:id="@id/icon_image"
            android:layout_width="35.339996dip"
            android:layout_height="35.339996dip"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12.0dip"
            android:layout_toRightOf="@id/icon_image"
            android:textColor="#ff333333"
            android:textSize="14.669983sp" />

        <CheckBox
            android:id="@id/is_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20.0dip"
            android:button="@drawable/btn_check_original"
            android:clickable="false"
            android:enabled="false"
            android:focusable="false" />
    </RelativeLayout>

    <View
        android:id="@id/separator"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginLeft="47.339996dip"
        android:background="#ffebebeb" />

</LinearLayout>