<?xml version="1.0" encoding="utf-8"?>
<com.lazyswipe.fan.FanItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@id/item_icon"
        android:layout_width="@dimen/fan_item_icon_size"
        android:layout_height="@dimen/fan_item_icon_size"
        android:layout_centerHorizontal="true"
        android:duplicateParentState="true"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@id/item_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@id/item_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2.0dip"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textSize="@dimen/fan_item_bubble_text_size" />

</com.lazyswipe.fan.FanItem>