<?xml version="1.0" encoding="utf-8"?>
<com.lazyswipe.features.splash.SplashView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff" >

    <LinearLayout
        android:id="@id/bottom_area"
        android:layout_width="fill_parent"
        android:layout_height="82.66998dip"
        android:layout_alignParentBottom="true" >

        <ImageView
            android:layout_width="43.669983dip"
            android:layout_height="43.669983dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40.0dip"
            android:layout_marginRight="16.0dip"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <ImageView
                android:id="@id/logo_label"
                android:layout_width="133.65dip"
                android:layout_height="23.0dip"
                android:src="@drawable/logo_label" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/splash_desc"
                android:textColor="#ff212121"
                android:textSize="13.339996sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@id/image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/bottom_area"
        android:scaleType="centerCrop" />

</com.lazyswipe.features.splash.SplashView>