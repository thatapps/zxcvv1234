<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@id/lucky_root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip" >

        <LinearLayout
            android:id="@id/lucky_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top" >

                <ImageView
                    android:id="@id/cover"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@id/ad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ad" />
            </FrameLayout>

            <RelativeLayout
                android:id="@id/body_container"
                android:layout_width="fill_parent"
                android:layout_height="71.0dip"
                android:background="#ffffffff"
                android:gravity="center_vertical"
                android:paddingBottom="10.0dip"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:paddingTop="10.0dip" >

                <ImageView
                    android:id="@id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:maxHeight="50.0dip" />

                <View
                    android:id="@id/icon_padding"
                    android:layout_width="16.0dip"
                    android:layout_height="1.0dip"
                    android:layout_alignParentTop="true"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_toEndOf="@id/icon"
                    android:layout_toRightOf="@id/icon" />

                <TextView
                    android:id="@id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@id/icon_padding"
                    android:layout_toRightOf="@id/icon_padding"
                    android:singleLine="true"
                    android:textColor="#ff343434"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@id/body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/title"
                    android:layout_toEndOf="@id/icon_padding"
                    android:layout_toRightOf="@id/icon_padding"
                    android:maxLines="2"
                    android:paddingTop="4.0dip"
                    android:textColor="#ff777777"
                    android:textSize="12.0sp" />
            </RelativeLayout>

            <TextView
                android:id="@id/action"
                android:layout_width="fill_parent"
                android:layout_height="55.0dip"
                android:layout_marginTop="3.3299866dip"
                android:background="#ff1da0f8"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="16.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/lucky_container"
            android:gravity="center" >

            <ImageView
                android:id="@id/update_icon"
                android:layout_width="46.0dip"
                android:layout_height="46.0dip"
                android:background="@drawable/ic_refresh_btn_bg"
                android:scaleType="centerInside"
                android:src="@drawable/ic_refresh_btn" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>