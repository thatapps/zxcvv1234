<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/preference_background"
    android:orientation="vertical"
    android:paddingBottom="20.0dip"
    android:paddingEnd="27.0dip"
    android:paddingLeft="27.0dip"
    android:paddingRight="27.0dip"
    android:paddingStart="27.0dip"
    android:paddingTop="20.0dip" >

    <TextView
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10.0dip"
        android:textColor="#ffffffff"
        android:textSize="16.669983dip" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@id/icon"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top|center"
            android:src="@drawable/ic_ad" />
    </FrameLayout>

    <View
        android:layout_width="1.0dip"
        android:layout_height="16.0dip" />

    <TextView
        android:id="@id/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/spotlight_button_background"
        android:ellipsize="end"
        android:paddingBottom="6.0dip"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:paddingTop="6.0dip"
        android:singleLine="true"
        android:textColor="#ffffffff"
        android:textSize="15.0dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:paddingTop="24.0dip" >

        <ImageView
            android:id="@id/update_icon"
            android:layout_width="46.0dip"
            android:layout_height="46.0dip"
            android:background="@drawable/ic_refresh_btn_bg"
            android:scaleType="centerInside"
            android:src="@drawable/ic_refresh_btn" />
    </LinearLayout>

</LinearLayout>