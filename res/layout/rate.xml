<?xml version="1.0" encoding="utf-8"?>
<com.lazyswipe.ui.RateView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/rate_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:alpha="0.0"
    android:background="@color/fan_background_color"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible" >

    <FrameLayout
        android:id="@id/rate_content"
        android:layout_width="281.66406dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#ffffffff" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@id/icon_stars"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rate_bg"
                android:paddingTop="16.0dip" >

                <LinearLayout
                    android:id="@id/icon_stars_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6.0dip"
                        android:src="@drawable/icon_star" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6.0dip"
                        android:src="@drawable/icon_star" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6.0dip"
                        android:src="@drawable/icon_star" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6.0dip"
                        android:src="@drawable/icon_star" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_star" />
                </LinearLayout>

                <LinearLayout
                    android:id="@id/icon_stars_fg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6.0dip"
                        android:src="@drawable/icon_star" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6.0dip"
                        android:src="@drawable/icon_star" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6.0dip"
                        android:src="@drawable/icon_star" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6.0dip"
                        android:src="@drawable/icon_star" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_star" />
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:id="@id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:paddingBottom="15.0dip"
                android:paddingLeft="30.0dip"
                android:paddingRight="30.0dip"
                android:paddingTop="15.0dip"
                android:textColor="#ff444444"
                android:textSize="13.299988sp" />

            <TextView
                android:id="@id/rate_ok"
                android:layout_width="268.66406dip"
                android:layout_height="40.669983dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5.0dip"
                android:background="@drawable/rating_like_bg"
                android:gravity="center"
                android:text="@string/title_rate_btn_rate"
                android:textColor="#ffffffff"
                android:textSize="16.0sp" />

            <TextView
                android:id="@id/rate_not_like"
                android:layout_width="268.66406dip"
                android:layout_height="40.669983dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="6.5dip"
                android:background="@drawable/rating_dislike_bg"
                android:gravity="center"
                android:text="@string/title_rate_btn_not_like"
                android:textColor="#ff888888"
                android:textSize="16.0sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="54.329987dip"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left|center"
            android:layout_marginLeft="6.0dip"
            android:src="@drawable/logo_label" />

        <ImageView
            android:id="@id/rate_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right|center"
            android:background="@drawable/bg_select_item"
            android:padding="6.0dip"
            android:src="@drawable/close" />

        <ImageView
            android:id="@id/hand"
            android:layout_width="37.5dip"
            android:layout_height="46.73999dip"
            android:layout_gravity="top|left|center"
            android:src="@drawable/guide_finger"
            android:visibility="gone" />
    </FrameLayout>

</com.lazyswipe.ui.RateView>